<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical"
        android:background="@color/colorButtons">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etShowNumber" android:gravity="right"
            android:background="@color/colorText" android:textSize="60sp" android:textColor="@color/white"
            android:layout_weight="1" android:paddingTop="10pt" android:hint="0"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0">
        <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="1pt"
                android:layout_height="match_parent">
            <Button
                    android:text="AC"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buAc" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buOpEvent"/>
            <Button
                    android:text="+/-"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buNeg" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
            <Button
                    android:layout_width="30pt"
                    android:layout_marginRight="1pt"
                    android:layout_height="30pt" android:id="@+id/buPer" android:text="%" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buOpEvent"/>
            <Button
                    android:text="/"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buDiv" android:layout_weight="1"
                    android:background="@color/colorOperations" android:textColor="@color/white"
                    android:textSize="24sp" android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="1pt"
                android:layout_height="match_parent">
            <Button
                    android:text="7"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu7" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
            <Button
                    android:text="8"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu8" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
            <Button
                    android:text="9"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu9" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
            <Button
                    android:text="X"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buMul" android:layout_weight="1"
                    android:background="@color/colorOperations" android:textColor="@color/white"
                    android:textSize="24sp" android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="1pt"
                android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu4" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
            <Button
                    android:text="5"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu5" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
            <Button
                    android:text="6"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu6" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
            <Button
                    android:text="-"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buMinus" android:layout_weight="1"
                    android:background="@color/colorOperations" android:textColor="@color/white"
                    android:textSize="24sp" android:onClick="buOpEvent"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="1pt"
                android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu1" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
            <Button
                    android:text="2"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu2" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
            <Button
                    android:text="3"
                    android:layout_marginRight="1pt"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/bu3" android:layout_weight="1"
                    android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
            <Button
                    android:text="+"
                    android:layout_width="30pt"
                    android:layout_height="30pt" android:id="@+id/buPlus" android:layout_weight="1"
                    android:background="@color/colorOperations" android:textColor="@color/white"
                    android:textSize="24sp" android:onClick="buOpEvent"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="0">
        <Button
                android:text="0"
                android:layout_marginRight="1pt"
                android:layout_width="60pt"
                android:layout_height="30pt" android:id="@+id/bu0" android:layout_weight="2"
                android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
        <Button
                android:text="."
                android:layout_marginRight="1pt"
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/buDot" android:layout_weight="1"
                android:background="@color/colorButtons" android:textSize="24sp" android:onClick="buNumberEvent"/>
        <Button
                android:text="="
                android:layout_width="30pt"
                android:layout_height="30pt" android:id="@+id/buEqual" android:layout_weight="1"
                android:background="@color/colorOperations" android:textColor="@color/white" android:textSize="24sp"
                android:onClick="buEqual"/>
    </LinearLayout>
</LinearLayout>